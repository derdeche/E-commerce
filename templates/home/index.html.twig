
    {% extends 'base.html.twig' %}
    
    {% block title %}Eveil Kids{% endblock %}
              
    
    {% block body %}
    <div class="slider-container">
        <div class="slider">
            {% for slider in sliders %}
            <section class="slide" style="background-image: url('assets/images/sliders/{{ slider.getImageUrl() }}')">
                <div class="bloc">
                    <div class="sliderdescription-{{ loop.index }}">
                        {{ slider.description }}
                    </div>
                    <div class="slidertitle-{{ loop.index }}">
                        {{ slider.title }}
                    </div>
                    <div class="sliderbutton-position-{{ loop.index }}">
                        <div class="sliderbutton-{{ loop.index }}">
                            <a href="{{ path('products_for_slider', {'slider_id': slider.getId()}) }}">{{ slider.getButtonLink}}</a>
                            
                        </div>
                    </div>
                </div>
            </section>
            {% endfor %}
        </div>
    
    
    
        <div class="position1">
            <button class="next-slide"> > </button>
        </div>
        <div class="position2">
            <button class="prev-slide"> < </button>
        </div>
        
        <div class="arrow-btn">
            <a href="#"><span class="fa-solid fa-arrow-up"></span></a>
        </div>
    </div>







    
    
    
</section>
<section class="preference">
    <h2>LES PRÉFÉRÉS DES PARENTS</h2>
    <div class="cards-container">
        {% for product in productsPreference %}
        
        <div class="card">                         
            
            <div class="card-header">
                <a href="{{ path('app_product_by_slug', {'slug': product.slug }) }}">
                    <img src="{{ asset('assets/images/products/' ~ product.imageUrls[0]) }}" alt="{{ product.name }}" style="width: 300px; height: 200px;">
                </a>
            </div>
            <div class="productname">
                <h3>{{ product.name }}</h3>
            </div>
            <div class="productprice">
                <p>Prix : {{ product.price }} €</p>
            </div>
                
            <div class="addtocart">
                <a href="{{ path('app_add_to_cart', {'productId': product.id, 'count': 1}) }}">Ajouter au panier</a>
            </div>
                                            
        </div>
        

        {% endfor %}
    </div>
</section>
