{% extends 'base.html.twig' %}

{% block title %}Confirmation de la commande{% endblock %}

{% block body %}
<h1>Confirmation de la Commande #{{ orderId }}</h1>
{% if order is defined %}
    <p>Status: {{ order.status }}</p>
    <p>Coût total: {{ order.orderCost }}</p>
    {% endif %}
    <h2>Produits commandés</h2>
    *******************************************************************************
<h1>Détails de la Commande #{{ orderId }}</h1>

{% if order is defined %}
    <p>Status: {{ order.status }}</p>

    <h2>Produits commandés</h2>

    {% for productId, quantity in productQuantities %}
    <li>
        Produit #{{ productId }} - Nom: {{ productNames[productId] }} - Quantité: {{ quantity }}
    </li>
{% endfor %}
**************************************************************************************
<h1>Votre commande a été confirmée avec succès!</h1>
<p>Numéro de commande: {{ orderId }}</p>

{% for productId, quantity in productQuantities %}
    <div>
        <h3>Produit #{{ productId }} - {{ productNames[productId] }}</h3>
        <p>Quantité: {{ quantity }}</p>
        <p>Prix unitaire: {{ productPrices[productId] }} €</p>
        <p>Total: {{ quantity * productPrices[productId] }} €</p>
    </div>
{% endfor %}

<p>Coût total de la commande: {{ order.orderCost }} €</p>


<p>Coût total de la commande: {{ order.orderCost }}</p>

{% else %}
    <p>La variable "order" n'est pas définie.</p>
{% endif %}


    
    
    <a href="{{ path('app_user', {'id': app.user.id}) }}">retourner à mon compte</a>

{% endblock %}





