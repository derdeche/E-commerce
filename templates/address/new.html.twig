{% extends 'base.html.twig' %}

{% block title %}Nouvelle Adresse{% endblock %}


    {% block body %}

<body >
    <div class="container">
        <div class="adresse-titre">
            <h1>Ajouter une nouvelle adresse</h1>
        </div>
    {# <div class="adresse-form"> #}
        {{ form_start(form, {'attr': {'class': 'form-adresse'}}) }}
        
        <div>
            Nom :        {{ form_row(form.client_name) }}
        </div>
        
        <div>
            Rue :        {{ form_row(form.street) }}
        </div>

        <div>
            Code postal :        {{ form_row(form.code_postal) }}
        </div>

        <div>
            Ville :        {{ form_row(form.city) }}
        </div>

        <div>
            Pays :        {{ form_row(form.state) }}
        </div>
        
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

        <button class="valide-form">{{ button_label|default('Ajouter') }}</button>
        
        {{ form_end(form) }}
    {# </div> #}
</body>
    </div>
    {% endblock %}

    
